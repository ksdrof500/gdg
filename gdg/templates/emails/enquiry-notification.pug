html
	head
	body
		h1 Olá %recipient.firstName%,
		p.text-larger Um inquérito foi submetido apenas a #{brand}:
		if enquiry.name.full || enquiry.email
			p.text-larger Para
				if enquiry.name.full
					| <strong> #{enquiry.name.full}</strong>
				if enquiry.name.full && enquiry.email
					|  (
				if enquiry.email
					| <a href="mailto:#{enquiry.email}">#{enquiry.email}</a>
				if enquiry.name.full && enquiry.email
					| )
		if enquiry.phone
			p.text-larger Telefone: #{enquiry.phone}
		if enquiry.enquiryType
			p.text-larger #{enquiry._.enquiryType.format()}
		if enquiry.message
			.text-larger !{enquiry.message.html}
		p.text-muted Enviar #{enquiry._.createdAt.format()}
		p &nbsp;
